/* pages/detail-songs/cpns/song-detail-header.wxss */
.header {
	position: relative;
	display: flex;
	flex-direction: column;
	height: 450rpx;
  color: white;
  width: 100vw;
  left: -20rpx;
}

.header .bg-image {
	position: absolute;
	z-index: -1;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
}

.header .bg-cover {
	position: absolute;
	z-index: -1;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	background-color: rega(0, 0, 0, .5);
	backdrop-filter: blur(5px);
}

.content {
	display: flex;
	margin-top: 60rpx;
	padding: 0 50rpx;
}

.content .image {
	width: 220rpx;
	height: 220rpx;
	border-radius: 16rpx;
}

.content .info {
	position: relative;
	height: 220rpx;
	flex: 1;
	margin-left: 50rpx;
}

.content .author {
	margin-top: 20rpx;
	display: flex;
	align-items: center;
}

.content .author .avatar {
	width: 50rpx;
	height: 50rpx;
	border-radius: 25rpx;
}

.content .author .nickname {
	font-size: 24rpx;
	margin-left: 18rpx;
}

.content .info .desc {
	position: absolute;
	bottom: 0;
	left: 0;
	width: 100%;
	margin-top: 30rpx;
	font-size: 24rpx;
	display: inline-block;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}

.operation {
	display: flex;
	justify-content: space-around;
	padding: 30rpx;
	margin-top: 30rpx;
}

.operation .item {
	display: flex;
  align-items: center;
  /* outline: 1px solid red; */
}

.operation .item .icon {
	width: 48rpx;
	margin-right: 10rpx;
}

.operation .item .text {
	font-size: 28rpx;
}